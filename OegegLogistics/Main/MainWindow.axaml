<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OegegLogistics.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OegegLogistics.Main"
        xmlns:vehicles="clr-namespace:OegegLogistics.Vehicles"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OegegLogistics.Main.MainWindow"
        x:DataType="views:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="OegegLogistics">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <views:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <Pen x:Key="MyPen" 
             Thickness="1" 
             Brush="{DynamicResource SystemChromeLowColor}" /> <!-- Change this for light/dark-->
    
        <DrawingBrush x:Key="DiagonalLines"  
                      Stretch="UniformToFill" 
                      TileMode="Tile" Opacity="0.25" 
                      DestinationRect="0,0,4,4">
            <DrawingBrush.Transform>
                <RotateTransform Angle="20"></RotateTransform>
            </DrawingBrush.Transform>
            <DrawingBrush.Drawing>
                <GeometryDrawing Pen="{StaticResource MyPen}">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup FillRule="EvenOdd" >
                            <GeometryCollection >
                                <LineGeometry StartPoint="0,0" EndPoint="0,3"/>
                                <LineGeometry StartPoint="2,0" EndPoint="2,3"/>
                            </GeometryCollection>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    
    </Window.Resources>

    <SplitView IsPaneOpen="True"
               DisplayMode="CompactInline"
               OpenPaneLength="225">
        <SplitView.Pane>
            <StackPanel Spacing="5">
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Ã–GEG"
                    FontSize="35"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    VerticalAlignment="Bottom"/>
                    <TextBlock Text="Logitisk"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"/>
                </StackPanel>
                    
                    <Separator></Separator>
                    <!-- try with contentcontrol whic happears when tab is selected -->
                <TreeView>
                    <TreeViewItem Header="Fahrzeuge">
                        <TreeViewItem Header="Loks"/>
                        <TreeViewItem Header="Waggons"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Benutzer">
                        <TreeViewItem Header="User"/>
                    </TreeViewItem>
                </TreeView>
            </StackPanel>
        </SplitView.Pane>
        <Grid VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Background="{StaticResource DiagonalLines}">
            <vehicles:VehiclesView/>
        </Grid>
    </SplitView>
</Window>
