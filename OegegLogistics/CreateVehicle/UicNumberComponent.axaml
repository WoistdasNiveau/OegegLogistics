<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:OegegLogistics.Shared.Components"
        xmlns:models="clr-namespace:OegegLogistics.Models">
    <Design.PreviewWith>
        <controls:UICNumberComponent />
    </Design.PreviewWith>

    <Style Selector="controls|UICNumberComponent">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="Auto,*,Auto"
                      HorizontalAlignment="Stretch">
                <Label Content="{TemplateBinding Title}"
                       Target="{Binding #textBlock}"
                       HorizontalAlignment="Center"
                       Grid.Row="0"/>
                <AutoCompleteBox Name="textBlock"
                                 ItemsSource="{TemplateBinding ItemsSource}"
                                 HorizontalAlignment="Center"
                                 SelectedItem="{TemplateBinding SelectedItem}"
                                 Grid.Row="1">
                </AutoCompleteBox>
                <TextBlock Text="{TemplateBinding Description}"
                           HorizontalAlignment="Center"
                           Grid.Row="2"/>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
