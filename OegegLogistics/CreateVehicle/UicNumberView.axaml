<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:OegegLogistics.Shared.Components"
             xmlns:createVehicle="clr-namespace:OegegLogistics.CreateVehicle"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OegegLogistics.CreateVehicle.UicNumberView"
             x:DataType="createVehicle:CreateVehicleViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <createVehicle:CreateVehicleViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="0.1*, 0.8*, 0.1*">
        <Label Grid.Row="0" Content="UIC Nummer"
               FontSize="25"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" />
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*,*,*,*,*"
              HorizontalAlignment="Stretch">
            
            <components:UICNumberComponent Grid.Column="0"
                                           Margin="10"
                                           Title="Austauschverfahren"
                                           ItemsSource="{Binding UicNumber.UicInteroperabilitySegment.PossibleItems}"
                                           SelectedItem="{Binding UicNumber.UicInteroperabilitySegment.Number}"
                                           Description="{Binding UicNumber.UicInteroperabilitySegment.Description}"/>
            <components:UICNumberComponent  Grid.Column="1"
                                            Margin="10"
                                            Title="Ländercode"
                                            ItemsSource="{Binding UicNumber.UicCountryCodeSegment.PossibleItems}"
                                            SelectedItem="{Binding UicNumber.UicCountryCodeSegment.Number}"
                                            Description="{Binding UicNumber.UicCountryCodeSegment.Description}"/>
            <components:UICNumberComponent  Grid.Column="2"
                                            Margin="10"
                                            Title="Type"
                                            ItemsSource="{Binding UicNumber.UicTypeSegment.PossibleItems}"
                                            SelectedItem="{Binding UicNumber.UicTypeSegment.Number}"
                                            Description="{Binding UicNumber.UicTypeSegment.Description}"/>
            <components:UICNumberComponent  Grid.Column="3"
                                            Margin="10"
                                            Title="Geschwindigkeit und Heizung"
                                            ItemsSource="{Binding UicNumber.UicVelocityHeatingSegment.PossibleItems}"
                                            SelectedItem="{Binding UicNumber.UicVelocityHeatingSegment.Number}"
                                            Description="{Binding UicNumber.UicVelocityHeatingSegment.Description}"/>
            <components:UICNumberComponent  Grid.Column="4"
                                            Margin="10"
                                            Title="Laufende Nummber"
                                            ItemsSource="{Binding UicNumber.UicSerialNumberSegment.PossibleItems}"
                                            SelectedItem="{Binding UicNumber.UicSerialNumberSegment.Number}"
                                            Description="{Binding UicNumber.UicSerialNumberSegment.Description}"/>
            <components:UICNumberComponent  Grid.Column="5"
                                            Margin="10"
                                            Title="Selbstkontrolle"
                                            ItemsSource="{Binding UicNumber.UicSelfCheckSegment.PossibleItems}"
                                            SelectedItem="{Binding UicNumber.UicSelfCheckSegment.Number}"
                                            Description="{Binding UicNumber.UicSelfCheckSegment.Description}"/>

            
        </Grid>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Abbrechen" />
            <Button Content="Fortfahren" />
        </StackPanel>
    </Grid>
</UserControl>