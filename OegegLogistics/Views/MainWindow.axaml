                               VerticalAlignment="Top"/>
                </StackPanel>
                    
                    <Separator></Separator>
                    <!-- try with contentcontrol whic happears when tab is selected -->
                <ListBox>
                    <ListBox.Items>
                        <ListBoxItem>
                            <StackPanel>
                                <TextBlock Text="Fahrzeuge"/>
                                <ListBox>
                                    <ListBox.Items>
                                        <ListBoxItem>
                                            <TextBlock Text="Loks"/>
                                        </ListBoxItem>
                                    </ListBox.Items>
                                </ListBox>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock Text="Benutzer"/>
                        </ListBoxItem>
                    </ListBox.Items>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>
        
    </SplitView>
</Window>
